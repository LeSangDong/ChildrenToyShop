<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activitys.FeedbackActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/sky"
        android:id="@+id/layout_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Đánh Giá Sản Phẩm"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/layout_title"
        android:id="@+id/layout_name"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="San pham"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:textColor="@color/grey"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.divider.MaterialDivider
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_below="@id/layout_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:id="@+id/icon_reaction"
        android:src="@drawable/icon_3sao"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_below="@id/icon_reaction"
        android:text="Hài lòng"
        android:textColor="@color/grey"
        android:fontFamily="@font/inter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_name_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_below="@id/tv_name_reaction"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="false"
        android:progressTint="#ffc106"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Nhận xét"
        android:textColor="@color/black"
        android:layout_below="@id/rating_bar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:id="@+id/title_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@id/title_comment"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/custom_edt_chat"
        android:hint="Hãy viết một vài cảm nhận của bạn về sản phẩm..."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:id="@+id/edt_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/custom_btn_buy_now"
        android:backgroundTint="@color/sky"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/btn_send_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Gửi Đánh Giá"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="@color/white"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>