<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:background="@color/white"
    android:paddingEnd="16dp"
    android:layout_marginTop="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Name Product"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:textColor="@color/grey"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textStyle="bold"

        android:id="@+id/tv_name_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_name_product"
        app:layout_constraintStart_toEndOf="@id/imageView"
        android:layout_marginStart="5dp"
        android:text="152 000d"
        android:textColor="@color/red"
        android:id="@+id/tv_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/tv_price_product"
        app:layout_constraintStart_toEndOf="@id/imageView"
        android:src="@drawable/baseline_indeterminate_check_box_24"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toEndOf="@id/iv_minus"
        app:layout_constraintTop_toBottomOf="@id/tv_price_product"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/tv_price_product"
        app:layout_constraintStart_toEndOf="@id/tv_quantity"
        android:src="@drawable/baseline_add_box_24"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <ImageView
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:src="@drawable/baseline_delete_24"
       android:id="@+id/iv_delete"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>