<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey_icon"
    android:layout_height="match_parent"
    tools:context=".activitys.ViewInfoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:background="@color/sky"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Thông Tin Cá Nhân"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
   <FrameLayout
       android:id="@+id/view_image_avatar"
       android:layout_below="@id/layout_title"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:layout_width="100dp"
       android:layout_height="100dp">

       <de.hdodenhof.circleimageview.CircleImageView
           app:civ_border_width="1dp"
           app:civ_border_color="@color/grey"
           android:id="@+id/image_avatar"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_gravity="center"
           android:src="@drawable/img_10" />
       <ProgressBar
           android:layout_gravity="center"
           android:indeterminate="true"
           android:indeterminateTint="@color/white"
           android:id="@+id/progress_loading"
           android:visibility="gone"
           android:layout_width="100dp"
           android:layout_height="100dp"/>

       <ImageView
           android:id="@+id/icon_add"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:layout_gravity="end"
           android:layout_marginTop="70dp"
           android:src="@drawable/baseline_add_circle_24" />

   </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/view_image_avatar"
        android:layout_marginTop="20dp"
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_person_24"
            android:id="@+id/icon_person"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_person"
            android:text="Le Van A"
            android:textStyle="bold"
            android:textColor="@color/black"
             android:fontFamily="@font/inter"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/item_name"
        android:layout_marginTop="10dp"
        android:id="@+id/item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_location_on_24"
            android:id="@+id/icon_location"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_location"
            android:text="Q9, Thu Duc"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/item_address"
        android:layout_marginTop="10dp"
        android:id="@+id/item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_phone_24"
            android:id="@+id/icon_phone"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_phone"
            android:text="00000000000"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintStart_toEndOf="@id/tv_phone"
            android:src="@drawable/baseline_check_circle_outline_24"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/check_success"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>