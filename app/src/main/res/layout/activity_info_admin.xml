<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.InfoAdminActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/sky"
        android:id="@+id/layout_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Thông Tin Cá Nhân"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
   <FrameLayout
       android:id="@+id/frame_image"
       android:layout_below="@id/layout_title"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:layout_width="80dp"
       android:layout_height="80dp">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_gravity="center"
           android:id="@+id/image_avatar"
           android:src="@drawable/imag_user_default"
           android:layout_width="80dp"
           android:layout_height="80dp"/>
       <ImageView
           android:src="@drawable/baseline_add_circle_24"
           android:layout_gravity="bottom|end"
           android:id="@+id/icon_add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ProgressBar
           android:layout_gravity="center"
           android:indeterminateTint="@color/sky"
           android:id="@+id/progress"
           android:visibility="gone"
           android:layout_width="50dp"
           android:layout_height="50dp"/>

   </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="30dp"
        android:id="@+id/item_name"
        android:layout_below="@id/frame_image"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_person_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_person"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:id="@+id/edt_name"
            app:layout_constraintEnd_toStartOf="@id/icon_edit"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_edit_24"
            android:id="@+id/icon_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/item_phone"
        android:layout_below="@id/item_name"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_phone_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_phone"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:id="@+id/edt_phone"
            app:layout_constraintEnd_toStartOf="@id/icon_edit_phone"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_edit_24"
            android:id="@+id/icon_edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>