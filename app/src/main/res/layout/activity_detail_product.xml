<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.DetailProductActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_title"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_7"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <ImageView
           app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_4"
            android:layout_marginEnd="16dp"
            android:id="@+id/iv_cart"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/iv_cart"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            android:text="2"
            android:id="@+id/tv_notification"
            android:textColor="@color/white"
            android:background="@drawable/custom_notification"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_cart"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_below="@id/layout_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:id="@+id/sroll_view"
        android:layout_above="@id/layout_bottom"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:id="@+id/layout_image"
                android:layout_height="260dp">
                <androidx.viewpager2.widget.ViewPager2
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/viewpager_product"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_marginEnd="16dp"
                  android:background="@drawable/custom_bg_count_image"
                  android:layout_marginBottom="16dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="@id/layout_image"
                  android:layout_width="45dp"
                  android:layout_height="25dp">
                  <TextView
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/tv_index_image"
                      android:text="1"
                      android:layout_marginStart="5dp"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:gravity="center"
                      android:layout_marginEnd="5dp"
                      app:layout_constraintStart_toEndOf="@id/tv_index_image"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:text="/ 10"
                      android:textColor="@color/white"
                      android:id="@+id/tv_sum_image"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Ten San Pham"
                    android:id="@+id/tv_name_product"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <RatingBar
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_product"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:rating="3.5"
                    android:progressTint="#FFC106"
                    android:stepSize="0.5"
                    android:indeterminate="false"
                    android:isIndicator="true"
                    android:id="@+id/rating_bar"
                    android:numStars="5"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"/>
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/rating_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="120.000đ"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/tv_price_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price_product"
                    android:text="-10%"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_bg_count_image"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/sky"
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@id/tv_percent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price_product"
                    android:layout_marginStart="5dp"
                    android:text="150.000đ"
                    android:id="@+id/tv_old_price"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="32dp"
                    android:id="@+id/shap_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_percent"
