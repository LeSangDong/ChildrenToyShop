                    android:backgroundTint="@color/sky"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@id/shap_color"
                    android:layout_marginStart="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:id="@+id/tv_color_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_old_price"
                    android:text="Màu sắc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@id/shap_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_color_title"
                    android:text="Xanh"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_color"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@id/tv_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_color_title"
                    android:src="@drawable/img_8"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <View
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/line_1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/grey_icon"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/line_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Kích thước"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_size_title"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="S"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_size"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_size_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    app:layout_constraintTop_toBottomOf="@id/tv_size_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_size"
