                    android:layout_marginEnd="16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <View
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/line_2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/grey_icon"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp"
                    android:id="@+id/tv_title_delivery"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:text="Thông tin vận chuyển"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_delivery"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/custom_search_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Địa chỉ nhận hàng"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/tv_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Ap 13, xa Long Huu, thi xa Duyen Hai, tinh Tra Vinh"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:id="@+id/tv_address_delivery"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:layout_constraintTop_toBottomOf="@id/tv_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_address_delivery"
                        android:src="@drawable/img_8"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:text="Yên tâm mua sắm"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:id="@+id/tv_yen_tam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    app:layout_constraintTop_toBottomOf="@id/tv_yen_tam"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/baseline_1_24"
                    android:id="@+id/img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintTop_toBottomOf="@id/tv_yen_tam"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/tv1"
                    android:id="@+id/text1"
                    android:fontFamily="@font/inter"
                    android:layout_height="wrap_content"/>
                <ImageView
                    app:layout_constraintTop_toBottomOf="@id/img1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/img2"
                    android:src="@drawable/baseline_2_24"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/text1"
                    app:layout_constraintStart_toEndOf="@id/img2"
                    android:layout_width="wrap_content"
                    android:text="@string/tv2"
                    android:id="@+id/text2"
                    android:fontFamily="@font/inter"
                    android:layout_height="wrap_content"/>
                <ImageView
                    app:layout_constraintTop_toBottomOf="@id/img2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/img3"
                    android:src="@drawable/baseline_324"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/text2"
                    app:layout_constraintStart_toEndOf="@id/img3"
                    android:layout_width="wrap_content"
                    android:text="@string/tv3"
                    android:id="@+id/text3"
                    android:fontFamily="@font/inter"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Chi tiết sản phẩm"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/labe_detail"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/label_origin"
                    android:text="Nơi sản xuất"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labe_detail"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="China"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/labe_detail"
                    android:id="@+id/tv_origin"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    app:layout_constraintTop_toBottomOf="@id/label_origin"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/line_one"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:text="Kích thước"
